@top Program { Statement+ }

Statement {
  Command Arg
}

Command {
  "MOV" | "ADD" | "SUB" | "MUL" | "DIV"
}

Arg {
  Register | Number
}

Register {
  "R1" | "R2" | "R3" | "R4"
}

Number {
  "0x" hex_digit+
}

@tokens {
  hex_digit { $[0-9a-fA-F] }
  space { @whitespace+ }
  comment { ";" ![\n]* }
}

@skip {
  space
  comment
}